{
  "compilerOptions": {
    "target": "es2017",
    "inlineSources": true,
    "inlineSourceMap": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "pretty": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": false,
    "outDir": "build",
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "src"
  ]
}
